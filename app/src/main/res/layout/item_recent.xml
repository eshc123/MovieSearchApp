<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="recent"
            type="com.eshc.moviesearchapp.ui.model.RecentUiModel" />
    </data>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_size_8"
        android:background="@drawable/ripple_button"
        android:minWidth="0dp"
        android:paddingHorizontal="@dimen/margin_size_16"
        android:text="@{recent.title}"
        android:layout_margin="@dimen/margin_size_4"
        android:textStyle="bold"
        tools:text="검색ㅋㅋㅋㅋ"/>
</layout>